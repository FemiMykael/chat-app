pipeline {
    agent any

    environment {
        REMOTE_HOST = '3.219.208.168'
        SSH_KEY_PATH = '/var/lib/jenkins/.ssh/chat-ci'
        ANSIBLE_PLAYBOOK = '/usr/local/bin/ansible-playbook'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/FemiMykael/chat-app.git', branch: 'master'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sshagent (credentials: ['chat-ec2-key']) {
                    sh '''
                        echo Running Ansible playbook on remote server...
                        ${ANSIBLE_PLAYBOOK} -i ${REMOTE_HOST}, ./ansible/site.yml --private-key ${SSH_KEY_PATH} -u ubuntu
                    '''
                }
            }
        }

        stage('Restart App with PM2') {
            steps {
                sshagent (credentials: ['chat-ec2-key']) {
                    sh '''
                        echo Restarting PM2 App...
                        ssh -o StrictHostKeyChecking=no -i ${SSH_KEY_PATH} ubuntu@${REMOTE_HOST} 'pm2 restart chat-app || pm2 start /home/ubuntu/chat-app/app.js --name chat-app'
                    '''
                }
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed. Please check Jenkins logs for details.'
        }
        success {
            echo 'Deployment completed successfully.'
        }
    }
}

