pipeline {
    agent any

    environment {
        EC2_IP = "3.219.208.168"
        REMOTE_USER = "ubuntu"
        SSH_KEY = "/var/lib/jenkins/.ssh/chat-ci"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/FemiMykael/chat-app.git', branch: 'master'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sshagent(credentials: ['chat-ec2-key']) {
                    sh '''
                        echo Running Ansible playbook on remote server...
                        export PATH="/usr/bin:/usr/local/bin:/usr/sbin:/bin:/usr/local/sbin:$PATH"
                        ansible-playbook -i ${EC2_IP}, ./ansible/site.yml --private-key ${SSH_KEY} -u ${REMOTE_USER}
                    '''
                }
            }
        }

        stage('Restart App with PM2') {
            steps {
                sshagent(credentials: ['chat-ec2-key']) {
                    sh '''
                        echo Restarting chat app with PM2...
                        ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ${REMOTE_USER}@${EC2_IP} 'pm2 restart chat-app || pm2 start /home/ubuntu/chat-app/app.js --name chat-app'
                    '''
                }
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed. Please check Jenkins logs for details.'
        }
    }
}

