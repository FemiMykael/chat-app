pipeline {
    agent any

    environment {
        ANSIBLE_HOST = "3.219.208.168"
        SSH_KEY_PATH = "/var/lib/jenkins/.ssh/chat-ci"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git credentialsId: 'chat-ec2-key', url: 'https://github.com/FemiMykael/chat-app.git', branch: 'master'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sshagent (credentials: ['chat-ec2-key']) {
                    sh '''
                        echo Running Ansible playbook on remote server...
                        sudo -E /usr/bin/ansible-playbook -i $ANSIBLE_HOST, ./ansible/site.yml --private-key $SSH_KEY_PATH -u ubuntu
                    '''
                }
            }
        }

        stage('Restart App with PM2') {
            steps {
                sshagent (credentials: ['chat-ec2-key']) {
                    sh '''
                        echo Restarting application using PM2...
                        ssh -o StrictHostKeyChecking=no -i $SSH_KEY_PATH ubuntu@$ANSIBLE_HOST 'pm2 restart all || pm2 start /home/ubuntu/chat-app/server.js'
                    '''
                }
            }
        }
    }

    post {
        failure {
            echo "Pipeline failed. Please check Jenkins logs for details."
        }
    }
}

