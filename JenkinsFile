pipeline {
    agent any

    environment {
        REMOTE_HOST = "3.219.208.168"
        SSH_KEY = "/var/lib/jenkins/.ssh/chat-ci"
        SSH_USER = "ubuntu"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/FemiMykael/chat-app.git', branch: 'master'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sshagent (credentials: ['chat-ec2-key']) {
                    sh '''
                        echo Running Ansible playbook on remote server...
                        sudo -E /usr/bin/ansible-playbook -i ${REMOTE_HOST}, ./ansible/site.yml --private-key ${SSH_KEY} -u ${SSH_USER}
                    '''
                }
            }
        }

        stage('Restart App with PM2') {
            steps {
                sshagent (credentials: ['chat-ec2-key']) {
                    sh '''
                        echo Restarting PM2 process...
                        ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ${SSH_USER}@${REMOTE_HOST} 'pm2 restart chat-app || pm2 start server.js --name chat-app'
                    '''
                }
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed. Please check Jenkins logs for details.'
        }
    }
}

